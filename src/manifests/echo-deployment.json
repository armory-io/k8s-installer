{
  "apiVersion": "extensions/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "annotations": {
      "artifact.spinnaker.io/location": "\"${NAMESPACE}\"",
      "artifact.spinnaker.io/name": "\"armory-echo\"",
      "artifact.spinnaker.io/type": "\"kubernetes/deployment\"",
      "moniker.spinnaker.io/application": "\"armory\"",
      "moniker.spinnaker.io/cluster": "\"echo\""
    },
    "name": "armory-echo",
    "namespace": "${NAMESPACE}",
    "labels": {
      "app": "armory-echo"
    }
  },
  "spec": {
    "strategy": {
      "type": "RollingUpdate",
      "rollingUpdate": {
        "maxUnavailable": 0,
        "maxSurge": 3
      }
    },
    "replicas": ${ECHO_REPLICAS},
    "selector": {
      "matchLabels": {
        "app": "armory-echo"
      }
    },
    "template": {
      "metadata": {
        "annotations": {
          "artifact.spinnaker.io/location": "\"${NAMESPACE}\"",
          "artifact.spinnaker.io/name": "\"armory-echo\"",
          "artifact.spinnaker.io/type": "\"kubernetes/deployment\"",
          "moniker.spinnaker.io/application": "\"armory\"",
          "moniker.spinnaker.io/cluster": "\"echo\""
        },
        "labels": {
          "app": "armory-echo"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "armory-echo",
            "image": "${DOCKER_REGISTRY}/echo-armory:${echo_armory_version}",
            "command": [
              "bash",
              "-c"
            ],
            "args": [
              "bash /opt/spinnaker/config/default/fetch.sh && cd /home/spinnaker/config && /opt/echo/bin/echo"
            ],
            "envFrom": [
              {
                "configMapRef": {
                  "name": "init-env"
                }
              }
            ],
            "env": [
              {
                "name": "JAVA_OPTS",
                "value": "-javaagent:/opt/echo/lib/jamm-0.2.5.jar"
              }
            ],
            "resources": {
              "requests": {
                "cpu": "${ECHO_CPU}",
                "memory": "${ECHO_MEMORY}"
              },
              "limits": {
                "cpu": "${ECHO_CPU}",
                "memory": "${ECHO_MEMORY}"
              }
            },
            "ports": [
              {
                "containerPort": 8089
              }
            ],
            "readinessProbe": {
              "httpGet": {
                "path": "/health",
                "port": 8089
              },
              "initialDelaySeconds": 60,
              "periodSeconds": 3,
              "successThreshold": 5
            },
            "livenessProbe": {
              "httpGet": {
                "path": "/health",
                "port": 8089
              },
              "initialDelaySeconds": 60,
              "periodSeconds": 3
            },
            "volumeMounts": [
              {
                "name": "podinfo",
                "mountPath": "/etc/podinfo",
                "readOnly": false
              },
              {
                "name": "default-config",
                "mountPath": "/opt/spinnaker/config/default"
              },
              {
                "name": "custom-config",
                "mountPath": "/opt/spinnaker/config/custom"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "custom-config",
            "configMap": {
              "name": "custom-config"
            }
          },
          {
            "name": "default-config",
            "configMap": {
              "name": "default-config"
            }
          },
          {
            "name": "podinfo",
            "downwardAPI": {
              "items": [
                {
                  "path": "labels",
                  "fieldRef": {
                    "fieldPath": "metadata.labels"
                  }
                },
                {
                  "path": "annotations",
                  "fieldRef": {
                    "fieldPath": "metadata.annotations"
                  }
                }
              ]
            }
          }
        ]
      }
    }
  }
}
