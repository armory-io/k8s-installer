{
  "apiVersion": "extensions/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "annotations": {
      "artifact.spinnaker.io/location": "\"${NAMESPACE}\"",
      "artifact.spinnaker.io/name": "\"armory-deck\"",
      "artifact.spinnaker.io/type": "\"kubernetes/deployment\"",
      "moniker.spinnaker.io/application": "\"armory\"",
      "moniker.spinnaker.io/cluster": "\"deck\""
    },
    "name": "deck",
    "namespace": "${NAMESPACE}",
    "labels": {
      "app": "deck"
    }
  },
  "spec": {
    "strategy": {
      "type": "RollingUpdate",
      "rollingUpdate": {
        "maxUnavailable": 0,
        "maxSurge": "100%"
      }
    },
    "replicas": 2,
    "selector": {
      "matchLabels": {
        "app": "deck"
      }
    },
    "template": {
      "metadata": {
        "annotations": {
          "artifact.spinnaker.io/location": "\"${NAMESPACE}\"",
          "artifact.spinnaker.io/name": "\"armory-deck\"",
          "artifact.spinnaker.io/type": "\"kubernetes/deployment\"",
          "moniker.spinnaker.io/application": "\"armory\"",
          "moniker.spinnaker.io/cluster": "\"deck\""
        },
        "labels": {
          "app": "deck"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "deck",
            "image": "docker.io/armory/deck-armory:${deck_armory_version}",
            "envFrom": [
              {
                "configMapRef": {
                  "name": "init-env"
                }
              }
            ],
            "command": [
              "bash",
              "-c"
            ],
            "args": [
              "bash /opt/spinnaker/config/default/fetch.sh && /entrypoint.sh"
            ],
            "resources": {
              "requests": {
                "cpu": "${DECK_CPU}",
                "memory": "${DECK_MEMORY}"
              }
            },
            "ports": [
              {
                "containerPort": 9000
              }
            ],
            "livenessProbe": {
              "httpGet": {
                "path": "/",
                "port": 9000
              },
              "initialDelaySeconds": 60,
              "periodSeconds": 3
            },
            "volumeMounts": [
              {
                "name": "podinfo",
                "mountPath": "/etc/podinfo",
                "readOnly": false
              },
              {
                "name": "default-config",
                "mountPath": "/opt/spinnaker/config/default"
              },
              {
                "name": "custom-config",
                "mountPath": "/opt/spinnaker/config/custom"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "custom-config",
            "configMap": {
              "name": "custom-config"
            }
          },
          {
            "name": "default-config",
            "configMap": {
              "name": "default-config"
            }
          },
          {
            "name": "podinfo",
            "downwardAPI": {
              "items": [
                {
                  "path": "labels",
                  "fieldRef": {
                    "fieldPath": "metadata.labels"
                  }
                },
                {
                  "path": "annotations",
                  "fieldRef": {
                    "fieldPath": "metadata.annotations"
                  }
                }
              ]
            }
          }
        ]
      }
    }
  }
}
