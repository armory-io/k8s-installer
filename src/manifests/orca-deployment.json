{
  "apiVersion": "extensions/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "annotations": {
      "artifact.spinnaker.io/location": "\"${NAMESPACE}\"",
      "artifact.spinnaker.io/name": "\"armory-orca\"",
      "artifact.spinnaker.io/type": "\"kubernetes/deployment\"",
      "moniker.spinnaker.io/application": "\"armory\"",
      "moniker.spinnaker.io/cluster": "\"orca\""
    },
    "name": "armory-orca",
    "namespace": "${NAMESPACE}",
    "labels": {
      "app": "armory-orca"
    }
  },
  "spec": {
    "minReadySeconds": 60,
    "strategy": {
      "type": "RollingUpdate",
      "rollingUpdate": {
        "maxUnavailable": 0,
        "maxSurge": "100%"
      }
    },
    "replicas": ${ORCA_REPLICAS},
    "selector": {
      "matchLabels": {
        "app": "armory-orca"
      }
    },
    "template": {
      "metadata": {
        "annotations": {
          "artifact.spinnaker.io/location": "\"${NAMESPACE}\"",
          "artifact.spinnaker.io/name": "\"armory-orca\"",
          "artifact.spinnaker.io/type": "\"kubernetes/deployment\"",
          "moniker.spinnaker.io/application": "\"armory\"",
          "moniker.spinnaker.io/cluster": "\"orca\""
        },
        "labels": {
          "app": "armory-orca"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "armory-orca",
            "image": "${DOCKER_REGISTRY}/spinnaker-orca-slim:${orca_version}",
            "command": [
              "bash",
              "-c"
            ],
            "args": [
              "bash /opt/spinnaker/config/default/fetch.sh && cd /home/spinnaker/config && /opt/orca/bin/orca"
            ],
            "envFrom": [
              {
                "configMapRef": {
                  "name": "init-env"
                }
              }
            ],
            "resources": {
              "requests": {
                "cpu": "${ORCA_CPU}",
                "memory": "${ORCA_MEMORY}"
              },
              "limits": {
                "cpu": "${ORCA_CPU}",
                "memory": "${ORCA_MEMORY}"
              }
            },
            "ports": [
              {
                "containerPort": 8083
              }
            ],
            "readinessProbe": {
              "httpGet": {
                "path": "/health",
                "port": 8083
              },
              "initialDelaySeconds": 60,
              "periodSeconds": 3,
              "successThreshold": 5
            },
            "livenessProbe": {
              "httpGet": {
                "path": "/health",
                "port": 8083
              },
              "initialDelaySeconds": 90,
              "periodSeconds": 5,
              "failureThreshold": 5
            },
            "lifecycle": {
              "preStop": {
                "exec": {
                  "command": [
                    "/bin/bash", "-c",
                    "/usr/bin/wget --header='Content-Type: application/json' --post-data {\\\"enabled\\\":false} http://localhost:8083/admin/instance/enabled && sleep 60"
                  ]
                }
              }
            },
            "volumeMounts": [
              {
                "name": "podinfo",
                "mountPath": "/etc/podinfo",
                "readOnly": false
              },
              {
                "name": "default-config",
                "mountPath": "/opt/spinnaker/config/default"
              },
              {
                "name": "custom-config",
                "mountPath": "/opt/spinnaker/config/custom"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "custom-config",
            "configMap": {
              "name": "custom-config"
            }
          },
          {
            "name": "default-config",
            "configMap": {
              "name": "default-config"
            }
          },
          {
            "name": "podinfo",
            "downwardAPI": {
              "items": [
                {
                  "path": "labels",
                  "fieldRef": {
                    "fieldPath": "metadata.labels"
                  }
                },
                {
                  "path": "annotations",
                  "fieldRef": {
                    "fieldPath": "metadata.annotations"
                  }
                }
              ]
            }
          }
        ]
      }
    }
  }
}
