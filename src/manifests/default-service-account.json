{
  "apiVersion": "rbac.authorization.k8s.io/v1beta1",
  "kind": "ClusterRoleBinding",
  "metadata": {
    "name": "default-service-account-rbac"
  },
  "subjects": [
    {
      "kind": "ServiceAccount",
      "name": "default",
      "namespace": "${NAMESPACE}"
    }
  ],
  "roleRef": {
    "kind": "ClusterRole",
    "name": "cluster-admin",
    "apiGroup": "rbac.authorization.k8s.io"
  }
}