{
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
        "name": "nginx",
        "namespace": "${NAMESPACE}",
        "labels": {
            "app": "nginx"
        },
        "annotations": {
            "cloud.google.com/load-balancer-type": "${LB_TYPE}",
            "service.beta.kubernetes.io/aws-load-balancer-internal": "${LB_INTERNAL}"
        }
    },
    "spec": {
        "ports": [
            {
                "name": "http",
                "port": 80,
                "targetPort": 80,
                "protocol": "TCP"
            },
            {
                "name": "https",
                "port": 443,
                "targetPort": 443,
                "protocol": "TCP"
            }
        ],
        "selector": {
            "app": "nginx"
        },
        "type": "${SERVICE_TYPE}"
    }
}
