{
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
        "name": "nginx",
        "namespace": "${NAMESPACE}",
        "labels": {
            "app": "nginx"
        }
    },
    "spec": {
        "ports": [
            {
                "port": 80,
                "targetPort": 80,
                "protocol": "TCP"
            }
        ],
        "selector": {
            "app": "nginx"
        },
        "type": "LoadBalancer"
    }
}