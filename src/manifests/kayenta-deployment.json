{
    "apiVersion": "extensions/v1beta1",
    "kind": "Deployment",
    "metadata": {
      "annotations": {
        "artifact.spinnaker.io/location": "\"${NAMESPACE}\"",
        "artifact.spinnaker.io/name": "\"armory-kayenta\"",
        "artifact.spinnaker.io/type": "\"kubernetes/deployment\"",
        "moniker.spinnaker.io/application": "\"armory\"",
        "moniker.spinnaker.io/cluster": "\"kayenta\""
      },
      "name": "armory-kayenta",
      "namespace": "${NAMESPACE}",
      "labels": {
        "app": "armory-kayenta"
      }
    },
    "spec": {
      "strategy": {
        "type": "RollingUpdate",
        "rollingUpdate": {
          "maxUnavailable": 0,
          "maxSurge": "100%"
        }
      },
      "replicas": ${KAYENTA_REPLICAS},
      "selector": {
        "matchLabels": {
          "app": "armory-kayenta"
        }
      },
      "template": {
        "metadata": {
          "annotations": {
            "artifact.spinnaker.io/location": "\"${NAMESPACE}\"",
            "artifact.spinnaker.io/name": "\"armory-kayenta\"",
            "artifact.spinnaker.io/type": "\"kubernetes/deployment\"",
            "moniker.spinnaker.io/application": "\"armory\"",
            "moniker.spinnaker.io/cluster": "\"kayenta\""
          },
          "labels": {
            "app": "armory-kayenta"
          }
        },
        "spec": {
          "containers": [
            {
              "name": "armory-kayenta",
              "image": "${DOCKER_REGISTRY}/spinnaker-kayenta-slim:${kayenta_version}",
              "envFrom": [
                {
                  "configMapRef": {
                    "name": "init-env"
                  }
                }
              ],
              "env": [
                {
                  "name": "JAVA_OPTS",
                  "value": "-Xmx${KAYENTA_JAVA_MEMORY}"
                },
                {
                  "name": "SPINNAKER_HOME",
                  "value": "/home/spinnaker"
                },
                {
                  "name": "KAYENTA_PORT_MAPPING",
                  "value": "-8090:8090"
                },
                {
                  "name": "GOOGLE_APPLICATION_CREDENTIALS",
                  "value": "${GCP_CREDS_MNT_PATH}"
                },
                {
                  "name": "LOG_LEVEL",
                  "value": "DEBUG"
                },
                {
                  "name": "NAMESPACE",
                  "valueFrom": {
                    "fieldRef": {
                      "fieldPath": "metadata.namespace"
                    }
                  }
                }
              ],
              "command": [
                "bash",
                "-c"
              ],
              "args": [
                "bash /opt/spinnaker/config/default/fetch.sh && cd /home/spinnaker/config && /opt/kayenta/bin/kayenta"
              ],
              "resources": {
                "requests": {
                  "cpu": "${KAYENTA_CPU}",
                  "memory": "${KAYENTA_MEMORY}"
                },
                "limits": {
                  "cpu": "${KAYENTA_CPU}",
                  "memory": "${KAYENTA_MEMORY}"
                }
              },
              "ports": [
                {
                  "containerPort": 8090
                }
              ],
              "readinessProbe": {
                "httpGet": {
                  "path": "/health",
                  "port": 8090
                },
                "initialDelaySeconds": 30,
                "periodSeconds": 5,
                "successThreshold": 5
              },
              "livenessProbe": {
                "httpGet": {
                  "path": "/health",
                  "port": 8090
                },
                "initialDelaySeconds": 180,
                "periodSeconds": 3
              },
              "volumeMounts": [
                {
                  "name": "podinfo",
                  "mountPath": "/etc/podinfo",
                  "readOnly": false
                },
                {
                  "name": "default-config",
                  "mountPath": "/opt/spinnaker/config/default"
                },
                {
                  "name": "gcp-credentials",
                  "mountPath": "/home/spinnaker/.gcp"
                },
                {
                  "name": "aws-s3-credentials",
                  "mountPath": "/home/spinnaker/.aws"
                },
                {
                  "name": "custom-config",
                  "mountPath": "/opt/spinnaker/config/custom"
                }
              ]
            }
          ],
          "volumes": [
            {
              "name": "custom-config",
              "configMap": {
                "name": "custom-config"
              }
            },
            {
              "name": "default-config",
              "configMap": {
                "name": "default-config"
              }
            },
            {
              "name": "gcp-credentials",
              "secret": {
                "secretName": "gcp-credentials"
              }
            },
            {
              "name": "aws-s3-credentials",
              "secret": {
                "secretName": "aws-s3-credentials"
              }
            },
            {
              "name": "podinfo",
              "downwardAPI": {
                "items": [
                  {
                    "path": "labels",
                    "fieldRef": {
                      "fieldPath": "metadata.labels"
                    }
                  },
                  {
                    "path": "annotations",
                    "fieldRef": {
                      "fieldPath": "metadata.annotations"
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    }
  }

