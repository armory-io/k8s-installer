{
  "apiVersion": "extensions/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "annotations": {
      "artifact.spinnaker.io/location": "\"${NAMESPACE}\"",
      "artifact.spinnaker.io/name": "\"armory-dinghy\"",
      "artifact.spinnaker.io/type": "\"kubernetes/deployment\"",
      "moniker.spinnaker.io/application": "\"armory\"",
      "moniker.spinnaker.io/cluster": "\"dinghy\""
    },
    "name": "dinghy",
    "namespace": "${NAMESPACE}",
    "labels": {
      "app": "dinghy"
    }
  },
  "spec": {
    "strategy": {
      "type": "RollingUpdate",
      "rollingUpdate": {
        "maxUnavailable": 0,
        "maxSurge": 3
      }
    },
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "app": "dinghy"
      }
    },
    "template": {
      "metadata": {
        "annotations": {
          "artifact.spinnaker.io/location": "\"${NAMESPACE}\"",
          "artifact.spinnaker.io/name": "\"armory-dinghy\"",
          "artifact.spinnaker.io/type": "\"kubernetes/deployment\"",
          "moniker.spinnaker.io/application": "\"armory\"",
          "moniker.spinnaker.io/cluster": "\"dinghy\""
        },
        "labels": {
          "app": "dinghy"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "dinghy",
            "image": "docker.io/armory/dinghy:${dinghy_version}",
            "envFrom": [
              {
                "configMapRef": {
                  "name": "init-env"
                }
              }
            ],
            "command": [
              "sh",
              "-c"
            ],
            "args": [
              "bash /opt/spinnaker/config/default/fetch.sh && /usr/local/bin/main"
            ],
            "env": [
              {
                "name": "DINGHY_PORT_MAPPING",
                "value": "-8081:8081"
              },
              {
                "name": "DINGHY_CONFIG",
                "value": "/home/spinnaker/config/dinghy-local.yml"
              },
              {
                "name": "SPINNAKER_HOME",
                "value": "/home/spinnaker"
              }
            ],
            "resources": {
              "requests": {
                "cpu": "${DINGHY_CPU}",
                "memory": "${DINGHY_MEMORY}"
              }
            },
            "ports": [
              {
                "containerPort": 5000
              }
            ],
            "volumeMounts": [
              {
                "name": "podinfo",
                "mountPath": "/etc/podinfo",
                "readOnly": false
              },
              {
                "name": "default-config",
                "mountPath": "/opt/spinnaker/config/default"
              },
              {
                "name": "custom-config",
                "mountPath": "/opt/spinnaker/config/custom"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "custom-config",
            "configMap": {
              "name": "custom-config"
            }
          },
          {
            "name": "default-config",
            "configMap": {
              "name": "default-config"
            }
          },
          {
            "name": "podinfo",
            "downwardAPI": {
              "items": [
                {
                  "path": "labels",
                  "fieldRef": {
                    "fieldPath": "metadata.labels"
                  }
                },
                {
                  "path": "annotations",
                  "fieldRef": {
                    "fieldPath": "metadata.annotations"
                  }
                }
              ]
            }
          }
        ]
      }
    }
  }
}
