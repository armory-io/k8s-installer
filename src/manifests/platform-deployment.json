{
    "apiVersion": "extensions/v1beta1",
    "kind": "Deployment",
    "metadata": {
      "annotations": {
        "artifact.spinnaker.io/location": "\"${NAMESPACE}\"",
        "artifact.spinnaker.io/name": "\"armory-platform\"",
        "artifact.spinnaker.io/type": "\"kubernetes/deployment\"",
        "moniker.spinnaker.io/application": "\"armory\"",
        "moniker.spinnaker.io/cluster": "\"platform\""
      },
      "name": "armory-platform",
      "namespace": "${NAMESPACE}",
      "labels": {
        "app": "armory-platform"
      }
    },
    "spec": {
      "strategy": {
        "type": "RollingUpdate",
        "rollingUpdate": {
          "maxUnavailable": 0,
          "maxSurge": "100%"
        }
      },
      "replicas": ${PLATFORM_REPLICAS},
      "selector": {
        "matchLabels": {
          "app": "armory-platform"
        }
      },
      "template": {
        "metadata": {
          "annotations": {
            "artifact.spinnaker.io/location": "\"${NAMESPACE}\"",
            "artifact.spinnaker.io/name": "\"armory-platform\"",
            "artifact.spinnaker.io/type": "\"kubernetes/deployment\"",
            "moniker.spinnaker.io/application": "\"armory\"",
            "moniker.spinnaker.io/cluster": "\"platform\""
          },
          "labels": {
            "app": "armory-platform"
          }
        },
        "spec": {
          "containers": [
            {
              "name": "armory-platform",
              "image": "docker.io/armory/platform:${platform_version}",
              "envFrom": [
                {
                  "configMapRef": {
                    "name": "init-env"
                  }
                }
              ],
              "env": [
                {
                  "name": "PLATFORM_LOCAL",
                  "value": "/home/spinnaker/config/platform-local.yml"
                },
                {
                  "name": "REDIS_PORT",
                  "value": "6379"
                },
                {
                  "name": "PLATFORM_PORT_MAPPING",
                  "value": "-5001:5001"
                },
                {
                    "name": "SLACK_CALLBACK_PORT",
                    "value": "10000"
                },
                {
                  "name": "LOG_LEVEL",
                  "value": "DEBUG"
                },
                {
                  "name": "NAMESPACE",
                  "valueFrom": {
                    "fieldRef": {
                      "fieldPath": "metadata.namespace"
                    }
                  }
                }
              ],
              "command": [
                "bash",
                "-c"
              ],
              "args": [
                "bash /opt/spinnaker/config/default/fetch.sh && /usr/local/bin/platform"
              ],
              "resources": {
                "requests": {
                  "cpu": "${PLATFORM_CPU}",
                  "memory": "${PLATFORM_MEMORY}"
                }
              },
              "ports": [
                {
                  "containerPort": 5001
                },
                {
                  "containerPort": 10000
                }
              ],
              "livenessProbe": {
                "httpGet": {
                  "path": "/health",
                  "port": 5001
                },
                "initialDelaySeconds": 60,
                "periodSeconds": 3
              },
              "volumeMounts": [
                {
                  "name": "podinfo",
                  "mountPath": "/etc/podinfo",
                  "readOnly": false
                },
                {
                  "name": "default-config",
                  "mountPath": "/opt/spinnaker/config/default"
                },
                {
                  "name": "custom-config",
                  "mountPath": "/opt/spinnaker/config/custom"
                }
              ]
            }
          ],
          "volumes": [
            {
              "name": "custom-config",
              "configMap": {
                "name": "custom-config"
              }
            },
            {
              "name": "default-config",
              "configMap": {
                "name": "default-config"
              }
            },
            {
              "name": "podinfo",
              "downwardAPI": {
                "items": [
                  {
                    "path": "labels",
                    "fieldRef": {
                      "fieldPath": "metadata.labels"
                    }
                  },
                  {
                    "path": "annotations",
                    "fieldRef": {
                      "fieldPath": "metadata.annotations"
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    }
  }
