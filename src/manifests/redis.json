{
  "apiVersion": "extensions/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "annotations": {
      "artifact.spinnaker.io/location": "\"${NAMESPACE}\"",
      "artifact.spinnaker.io/name": "\"armory-redis\"",
      "artifact.spinnaker.io/type": "\"kubernetes/deployment\"",
      "moniker.spinnaker.io/application": "\"armory\"",
      "moniker.spinnaker.io/cluster": "\"redis\""
    },
    "name": "redis",
    "namespace": "${NAMESPACE}",
    "labels": {
      "app": "redis"
    }
  },
  "spec": {
    "strategy": {
      "type": "RollingUpdate",
      "rollingUpdate": {
        "maxUnavailable": 0,
        "maxSurge": 3
      }
    },
    "replicas": 3,
    "selector": {
      "matchLabels": {
        "app": "redis"
      }
    },
    "template": {
      "metadata": {
        "annotations": {
          "artifact.spinnaker.io/location": "\"${NAMESPACE}\"",
          "artifact.spinnaker.io/name": "\"armory-redis\"",
          "artifact.spinnaker.io/type": "\"kubernetes/deployment\"",
          "moniker.spinnaker.io/application": "\"armory\"",
          "moniker.spinnaker.io/cluster": "\"redis\""
        },
        "labels": {
          "app": "redis"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "redis",
            "image": "redis:3.2",
            "resources": {
              "limits": {
                "cpu": "1000m",
                "memory": "1024Mi"
              }
            },
            "command": [ "redis-server" ],
            "args": ["/opt/spinnaker/config/redis/redis-master.conf"],
            "ports": [
              {
                "name": "redis",
                "containerPort": 6379
              }
            ],
            "volumeMounts": [
              {
                "name": "data",
                "mountPath": "/redis-master-data"
              },
              {
                "name": "redis-config",
                "mountPath": "/opt/spinnaker/config/redis"
              }
            ]
          },
          {
            "name": "redis-sentinel",
            "image": "redis:3.2",
            "resources": {
              "limits": {
                "cpu": "1000m",
                "memory": "1024Mi"
              }
            },
            "command": [
              "bash", "-c", "touch sentinel.conf && redis-sentinel sentinel.conf"
            ],
            "ports": [
              {
                "name": "redis",
                "containerPort": 26379
              }
            ]
          },
          {
            "name": "redis-sidecar",
            "image": "armory/k8s-redis:latest",
            "resources": {
              "limits": {
                "cpu": "200m"
              }
            }
          }
        ],
        "volumes": [
          {
            "name": "redis-config",
            "configMap": {
              "name": "redis-config"
            }
          },
          {
            "name": "data",
            "emptyDir": {}
          }
        ]
      }
    }
  }
}
